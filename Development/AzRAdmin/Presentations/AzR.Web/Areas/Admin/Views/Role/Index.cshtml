@model IEnumerable<AzR.Core.ViewModels.Admin.RoleViewModel>
@{
    var count = 1; //Model.FirstItemOnPage;
}

<div class="clearfix"></div>

<div class="box">
    <h3 class="box-title">
        <span class="btn btn-sm btn-info btnCreate" onclick="createModal('@Url.Action("Create", "Role")') ">
            <i class="glyphicon glyphicon-plus"></i>Create New
        </span>
    </h3>    @if (Model.Any())
             {
                 <div class="box-body" id="divList">
                     <div class="table-responsive">
                         <table id="dataTable" class="table table-bordered table-hover">
                             <thead>
                             <tr>
                                 <th style="width: 50px;">SL#</th>
                                 <th>@Html.DisplayNameFor(model => model.First().RoleCode)</th>
                                 <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                                 <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
                                 <th style="width: 150px;">Actions</th>
                             </tr>
                             </thead>
                             <tbody>
                             @foreach (var item in Model)
                             {
                                 <tr class="dataItem">
                                     <td>@(count++)</td>
                                     <td>@Html.DisplayFor(modelItem => item.RoleCode)</td>
                                     <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                     <td>
                                         @Html.DisplayFor(modelItem => item.IsActive,"ActiveInActive")
                                     </td>
                                     <td>
                                         <span class="btn btn-primary" onclick="createModal('@Url.Action("Edit", "Role",new {id=item.Id})') " title="Edit"><i class="fa fa-edit fa-1x"></i></span>
                                         <span class="btn btn-danger" onclick="deleteModal('@Url.Action("Delete", "Role",new {id=item.Id})','@Url.Action("Index", "Role")') " title="Delete"><i class="fa fa-trash-o fa-1x"></i></span>
                                     </td>
                                 </tr>
                             }
                             </tbody>
                         </table>
                     </div>
                 </div>
                 @*<div class="box-footer">
                     @Html.PaginationFor(Model, page => Url.Action("Index", new {area = "Admin", searchItem = ViewBag.SearchData, page, pageSize =Model.PageSize}))
                 </div>*@
             }
             else
             {
                 <div class="no-data">
                     <hr/>
                     <h3>No Data Found!!!</h3>
                     <hr/>
                 </div>
             }
</div>

